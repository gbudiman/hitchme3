!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Hitchme3
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav{class: 'navbar navbar-inverse'}
      %div{class: 'container-fluid'}
        %div{class: 'navbar-header'}
          %a{class: 'navbar-brand', href: '#'} Hitch.Me

        %ul{class: 'nav navbar-nav navbar-right'}
          %li
            %a{href: '/auth/facebook', id: 'fb-login'} Sign In
          / %li
          /   %a{href: '#', id: 'profile-login', hidden: true} Sign In
          / %li{id: 'profile-button-container', hidden: true}
          /   %a{href: '#', id: 'profile-button', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
          /     %span{id: 'profile-name'}
          /     %span{class: 'caret'}
          /   %ul{class: 'dropdown-menu'}
          /     %li{class: 'divider'}
          /     %li
          /       %a{href: '#', id: 'profile-logout'} Sign Out
    = yield
